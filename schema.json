{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ChainMakerCredential",
    "type": "object",
    "properties": {
        "attachements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "accessPoint": {
                        "type": "string"
                    },
                    "fileHash": {
                        "type": "string"
                    }
                },
                "required": [
                    "accessPoint",
                    "fileHash"
                ]
            }
        },
        "content": {
            "type": "object",
            "properties": {
                "currency": {
                    "type": "string"
                },
                "taxCode": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "currency",
                "taxCode",
                "value"
            ]
        },
        "holder": {
            "type": "object",
            "properties": {
                "did": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "did",
                "name"
            ]
        },
        "issuers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "contractAddr": {
                        "type": "string"
                    },
                    "did": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "contractAddr",
                    "did",
                    "name"
                ]
            }
        },
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "attachements",
        "content",
        "holder",
        "issuers",
        "type"
    ]
}