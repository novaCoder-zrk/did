{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SimpleCredentialSubject",
    "type": "object",
    "properties": {
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "chainmaker": {
            "type": "object",
            "properties": {
                "attachements": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "accessPoint": {
                                "type": "string"
                            },
                            "fileHash": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "accessPoint",
                            "fileHash"
                        ]
                    }
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "currency": {
                            "type": "string"
                        },
                        "taxCode": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "currency",
                        "taxCode",
                        "value"
                    ]
                },
                "holder": {
                    "type": "object",
                    "properties": {
                        "did": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "did",
                        "name"
                    ]
                },
                "issuers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "contractAddr": {
                                "type": "string"
                            },
                            "did": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "contractAddr",
                            "did",
                            "name"
                        ]
                    }
                }
            },
            "required": [
                "attachements",
                "content",
                "holder",
                "issuers"
            ]
        }
    },
    "required": [
        "type",
        "chainmaker"
    ]
}
